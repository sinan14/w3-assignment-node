<h1 class="text-center">Apply</h1>
<form
  action="/api/jobs/apply"
  method="POST"
  enctype="multipart/form-data"
  class="p-5"
>
  <div class="form-group">
    <label for="des">Name</label>
    <input
      name="name"
      type="text"
      readonly
      class="form-control"
      id="name"
      required
      aria-describedby="emailHelp"
      value="<%= locals.user.name %>"
    />
  </div>
  <div class="form-group">
    <label for="des">Email</label>
    <input
      name="email"
      type="email"
      class="form-control"
      id="email"
      required
      aria-describedby="emailHelp"
      value="<%= locals.user.email %>"
      readonly
    />
  </div>

  <div class="form-group">
    <label for="inputGroupFile02">Upload resume</label>
    <input type="file" name="file" class="form-control" id="inputGroupFile02" />
  </div>
  <input type="hidden" name="jobId" id="hiddenjobId" />
  <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
<script>
  addEventListener("DOMContentLoaded", (event) => {
    document.getElementById("hiddenjobId").value =
      localStorage.getItem("jobId");
  });
</script>
